<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="urlTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"></TextBox>
        <Button Name="downloadButton" Content="Download" Margin="10" Click="downloadButton_Click"></Button>
        <ProgressBar Name="downloadProgressBar" Margin="10" Height="20" Minimum="0" MaxHeight="100"></ProgressBar>
    </StackPanel>
</Window>
